doctype html 
html
    head
        title Movie Finder 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")
    body

        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-layout
            .container-fluid
                a.navbar-brand(href='#') Express Movie Finder
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item
                            a.nav-link.active(aria-current='page' href='/') Home
                    form.d-flex(action='/search', method=GET)
                        input.form-control.mx-1(name='search' type='text' placeholder='Search')
                        button.btn.btn-outline-success.mx-1(type='submit') Search
        

        block content 
        br
        hr
        footer.footer.mt-auto.py-3 
